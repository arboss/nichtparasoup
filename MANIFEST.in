## https://packaging.python.org/guides/using-manifest-in/

# blank start
global-exclude *

# required: this file
include MANIFEST.in


# project files
include README.md
include pyproject.toml
include setup.cfg include setup.py
graft src/nichtparasoup


# additional files and folders

include LICENSE AUTHORS INSTALL HISTORY.md

graft docs
graft examples
graft images
graft tests

include .coveragerc
include .flake8
include pytest.ini
include mypy.ini
include tox.ini


# excludes

## this is a fully working example. it might get moved to another standalone project.
prune examples/nichtparasoup-imagecrawler-plugin

global-exclude *_cache/*
global-exclude __pycache__
global-exclude *.py[cod]

global-exclude .gitignore
